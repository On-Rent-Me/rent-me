<div class="max-w-2xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6 text-indigo-400">Your QR Code</h1>

  <div class="bg-white shadow-md rounded-lg p-8 text-center">
    <div class="mb-6">
      <%= @user_code.qr_code_data.html_safe %>
    </div>

    <div class="text-left space-y-2 mb-6">
      <p class="text-gray-700"><strong>URL:</strong> <%= @user_code.url %></p>
      <p class="text-gray-600 text-sm">Created: <%= @user_code.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>

    <div class="flex gap-4 justify-center">
      <%= link_to "Generate Another", new_user_code_path, class: "bg-rentme-green hover:bg-rentme-green-secondary text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "View All", user_codes_path, class: "bg-rentme-blue hover:bg-rentme-blue-secondary text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
