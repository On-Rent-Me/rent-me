<div class="bg-white dark:bg-gray-900 min-h-screen">
  <header class="absolute inset-x-0 top-0 z-50">
    <nav aria-label="Global" class="flex items-center justify-between p-6 lg:px-8">
      <div class="flex lg:flex-1">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Rent Me</span>
          <%= image_tag "logo.svg", alt: "Rent Me", class: "h-8 w-auto" %>
        </a>
      </div>

      <% if authenticated? %>
        <div class="flex-1 text-center">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
            Welcome to Rent Me: <%= Current.user&.email_address %>
          </span>
        </div>
      <% end %>

      <div class="flex lg:flex-1 lg:justify-end gap-4">
        <% if authenticated? %>
          <%= button_to "Sign out", session_path, method: :delete, class: "rounded-lg px-4 py-2 text-sm font-semibold text-gray-900 hover:bg-gray-50 dark:text-white dark:hover:bg-white/5" %>
        <% else %>
          <%= link_to "Sign in", new_session_path, class: "rounded-lg px-4 py-2 text-sm font-semibold text-gray-900 hover:bg-gray-50 dark:text-white dark:hover:bg-white/5" %>
        <% end %>
      </div>
    </nav>
  </header>

  <div class="relative isolate px-6 pt-24 lg:px-8">
    <div class="mx-auto max-w-2xl py-32">
      <!-- Main content area -->
    </div>
  </div>
</div>
