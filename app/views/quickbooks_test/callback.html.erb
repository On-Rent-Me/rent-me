<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <% if @success %>
        <!-- Success State -->
        <div class="text-center mb-8">
          <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
            <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Successfully Connected!</h1>
          <p class="text-gray-600">Your QuickBooks account is now connected</p>
        </div>

        <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-6">
          <h2 class="text-lg font-semibold text-green-900 mb-4">Company Information</h2>
          <div class="space-y-2 text-sm">
            <% if @company_info && @company_info["CompanyInfo"] %>
              <div class="grid grid-cols-2 gap-2">
                <span class="text-gray-700 font-medium">Company Name:</span>
                <span class="text-gray-900"><%= @company_info["CompanyInfo"]["CompanyName"] %></span>

                <span class="text-gray-700 font-medium">Realm ID:</span>
                <span class="text-gray-900 font-mono text-xs"><%= session[:qb_realm_id] %></span>

                <% if @company_info["CompanyInfo"]["LegalName"] %>
                  <span class="text-gray-700 font-medium">Legal Name:</span>
                  <span class="text-gray-900"><%= @company_info["CompanyInfo"]["LegalName"] %></span>
                <% end %>

                <% if @company_info["CompanyInfo"]["Country"] %>
                  <span class="text-gray-700 font-medium">Country:</span>
                  <span class="text-gray-900"><%= @company_info["CompanyInfo"]["Country"] %></span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <%= link_to "Go to Test Page",
            quickbooks_test_index_path,
            class: "w-full inline-flex justify-center items-center bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-150 ease-in-out" %>

      <% else %>
        <!-- Error State -->
        <div class="text-center mb-8">
          <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100 mb-4">
            <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Connection Failed</h1>
          <p class="text-gray-600">There was a problem connecting to QuickBooks</p>
        </div>

        <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
          <h2 class="text-lg font-semibold text-red-900 mb-2">Error Details</h2>
          <p class="text-red-700 text-sm font-mono"><%= @error %></p>
        </div>

        <div class="flex gap-3">
          <%= link_to "Try Again",
              quickbooks_test_index_path,
              class: "flex-1 inline-flex justify-center items-center bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-150 ease-in-out" %>

          <%= link_to "Back to Home",
              root_path,
              class: "flex-1 inline-flex justify-center items-center bg-gray-600 hover:bg-gray-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-150 ease-in-out" %>
        </div>
      <% end %>

      <!-- Debug Info -->
      <% if Rails.env.development? %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <details class="text-sm">
            <summary class="cursor-pointer text-gray-700 font-semibold mb-2">Debug Information</summary>
            <pre class="bg-gray-50 p-4 rounded overflow-x-auto text-xs"><%= JSON.pretty_generate({
              success: @success,
              error: @error,
              realm_id: params[:realmId],
              code_present: params[:code].present?,
              session_token: session[:qb_access_token].present?,
              company_info: @company_info
            }) %></pre>
          </details>
        </div>
      <% end %>
    </div>
  </div>
</div>
