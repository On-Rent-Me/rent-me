<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        <%= @user_integration.integration_type.titleize %>
      </h2>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0 gap-2">
      <%= link_to edit_user_integration_path(@user_integration), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        Edit
      <% end %>
      <%= button_to user_integration_path(@user_integration), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-700" do %>
        Delete
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Integration Details
        </h3>
        <% if @user_integration.active %>
          <span class="ml-3 inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
            Active
          </span>
        <% else %>
          <span class="ml-3 inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
            Inactive
          </span>
        <% end %>
        <% if @user_integration.expired? %>
          <span class="ml-2 inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
            Expired
          </span>
        <% end %>
      </div>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Integration Type</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= @user_integration.integration_type %>
          </dd>
        </div>
        <% if @user_integration.external_id.present? %>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">External ID</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <%= @user_integration.external_id %>
            </dd>
          </div>
        <% end %>
        <% if @user_integration.expires_at.present? %>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Expires At</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <%= @user_integration.expires_at.strftime("%B %d, %Y at %I:%M %p") %>
            </dd>
          </div>
        <% end %>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= @user_integration.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= @user_integration.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
        <% if @user_integration.metadata.present? && @user_integration.metadata.any? %>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Metadata</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <dl class="space-y-2">
                <% @user_integration.metadata.each do |key, value| %>
                  <div>
                    <dt class="font-medium text-gray-700"><%= key.titleize %></dt>
                    <dd class="text-gray-600"><%= value %></dd>
                  </div>
                <% end %>
              </dl>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <div class="mt-8">
    <%= link_to user_integrations_path, class: "text-sm font-semibold leading-6 text-gray-900" do %>
      <span aria-hidden="true">‚Üê</span> Back to integrations
    <% end %>
  </div>
</div>
